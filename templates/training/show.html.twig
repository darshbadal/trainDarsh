{% extends 'base.html.twig' %}

{% block title %}Training{% endblock %}

{% block body %}
    <hr>
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/training">Trainings aanbod</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/registreren">Lid worden</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Gedrag regels</a>
        </li>

        <li class="nav-item">
            <a class="nav-link" href="/contact">Locatie & Contact</a>
        </li>

        <li class="nav-item">
            <a class="nav-link active" href="/login">Inloggen</a>
        </li>

    </ul>

    <hr>
    <h1>Training</h1>

    <table class="table table-striped">
        <tbody>
            <tr class="table">
                <th>Id</th>
                <td>{{ training.id }}</td>
            </tr>
            <tr class="table">
                <th>Naam</th>
                <td>{{ training.naam }}</td>
            </tr>
            <tr class="table">
                <th>Omschrijving</th>
                <td>{{ training.omschrijving }}</td>
            </tr>
            <tr class="table">
                <th>Looptijd</th>
                <td>{{ training.looptijd ? training.looptijd|date('H:i:s') : '' }}</td>
            </tr>
            <tr class="table">
                <th>Costs</th>
                <td>{{ training.costs }}</td>
            </tr>
        </tbody>
    </table>

    <button class="btn btn-secondary">
        <a href="{{ path('training_index') }}">back to list</a>
    </button>

    <button class="btn btn-warning">
        <a href="{{ path('training_edit', {'id': training.id}) }}">edit</a>
    </button>

    {{ include('training/_delete_form.html.twig') }}

    <style>
        a{
            color: #8B0000;
        }

        a:hover{
            text-decoration: none;
        }

        h1{
            text-align: center;
            color: #8B0000;
        }
    </style>
{% endblock %}
